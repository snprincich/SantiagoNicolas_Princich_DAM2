<Page
    x:Class="Wpf.Ui.Demo.Mvvm.Views.Pages.DashboardPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Wpf.Ui.Demo.Mvvm.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:models="clr-namespace:Wpf.Ui.Demo.Mvvm.Models"
    xmlns:viewmodels="clr-namespace:Wpf.Ui.Demo.Mvvm.ViewModels"
    xmlns:dto="clr-namespace:WPF_UI.DTO"
    Title="DashboardPage"
    d:DataContext="{d:DesignInstance viewmodels:DashboardViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    mc:Ignorable="d">

    <Grid >

        <Grid.RowDefinitions>
            <RowDefinition Height="10"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <ui:FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE700;" HorizontalAlignment="Left" Foreground="White" />

        <ui:Button Name="Add" Content="Add" HorizontalAlignment="Right" Command="{Binding ViewModel.AddCommand}" Icon="" Foreground="White" />
        <ui:DataGrid
            Grid.Row="1" 
            x:Name="MyDataGrid"       
            ItemsSource="{Binding ViewModel.ListaCoches}" 
            AutoGenerateColumns="True" 
            Margin="10" 
            CanUserResizeColumns="True"
            CanUserResizeRows="False"
            VerticalAlignment="Top"
            HorizontalAlignment="Left"
            MinRowHeight="25"
            MaxHeight="400" 
            
            ColumnWidth="Auto"
            ScrollViewer.VerticalScrollBarVisibility="Auto"
            ScrollViewer.HorizontalScrollBarVisibility="Auto"/>

    </Grid>
</Page>
