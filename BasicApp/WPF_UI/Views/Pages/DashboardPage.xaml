<Page
    x:Class="Wpf.Ui.Demo.Mvvm.Views.Pages.DashboardPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Wpf.Ui.Demo.Mvvm.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:models="clr-namespace:Wpf.Ui.Demo.Mvvm.Models"
    xmlns:dto="clr-namespace:WPF_UI.DTO"
    Title="DashboardPage"
    d:DataContext="{d:DesignInstance local:DashboardPage,
                                     IsDesignTimeCreatable=False}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    mc:Ignorable="d">

    <Grid Margin="42" VerticalAlignment="Top">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <ui:Button
            Grid.Column="0"
            Command="{Binding ViewModel.CounterIncrementCommand, Mode=OneWay}"
            Content="Click me!"
            Icon="{ui:SymbolIcon Fluent24}" />
        <TextBlock
            Grid.Column="1"
            Margin="12,0,0,0"
            VerticalAlignment="Center"
            Text="{Binding ViewModel.Counter, Mode=OneWay}" />


        <StackPanel>
            <ui:VirtualizingItemsControl
                Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                ItemsSource="{Binding PagedCoches, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                VirtualizingPanel.CacheLengthUnit="Item">
                <ItemsControl.ItemTemplate>
                    <DataTemplate DataType="{x:Type dto:CocheDTO}">
                        <StackPanel>
                            <TextBox Text="{Binding Marca, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                     Margin="5" />
                            <TextBox Text="{Binding Modelo, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                      Margin="5" />
                            <TextBox Text="{Binding Precio, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                      Margin="5" />
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ui:VirtualizingItemsControl>

            <!-- Controles para cambiar de pagina -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Previous" Command="{Binding PreviousPageCommand}" Margin="10"/>
                <Button Content="Next" Command="{Binding NextPageCommand}" Margin="10"/>
            </StackPanel>
        </StackPanel>

    </Grid>
</Page>
