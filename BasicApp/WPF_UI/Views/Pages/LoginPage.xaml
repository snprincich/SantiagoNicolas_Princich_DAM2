<Page x:Class="Wpf.Ui.Demo.Mvvm.Views.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPF_UI.Views.Pages"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns:viewmodels="clr-namespace:Wpf.Ui.Demo.Mvvm.ViewModels"
      mc:Ignorable="d" 
      d:DataContext="{d:DesignInstance viewmodels:RegistroViewModel}"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage">

    <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Width="300">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <TextBlock Text="Login" FontSize="20" FontWeight="Bold" Grid.Row="0"/>

        <TextBox Text="{Binding ViewModel.Email}" Grid.Row="1"/>
        <TextBox Text="{Binding ViewModel.Password}"  Grid.Row="2"/>

        <CheckBox Content="Remember me"  Grid.Row="3"/>
        <TextBlock Text="Forgot password?" HorizontalAlignment="Right" Foreground="Blue" Cursor="Hand"  Grid.Row="4"/>

        <Button Content="Login Now" Command="{Binding ViewModel.LoginCommand}" Background="#007BFF" Foreground="White" Height="40" Grid.Row="5"/>
        <TextBlock Text="Don't have an account? Signup now" HorizontalAlignment="Center" Cursor="Hand" Foreground="Blue" Grid.Row="6"/>
    </Grid>
</Page>
